{{>cart }}

<h1 class="text-center text-white mb-4">Drinks Menu</h1>

{{#if drinks.length}}
    <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
        {{#each drinks}}
        <div class="col">
            <div class="card bg-dark text-white border-primary shadow-sm h-100">
                <div class="card-body d-flex flex-column">
                    <h5 class="card-title">{{this.name}}</h5>
                    <p class="card-text text-white mb-auto">{{this.description}}</p>
                    <div class="mt-3 d-flex justify-content-between align-items-center">
                        <h4 class="text-success m-0">${{this.price}}</h4>
                        <button class="btn btn-primary" id="{{this.id}}">Add to Order</button>
                    </div>
                </div>
            </div>
        </div>
        {{/each}}
    </div>
{{else}}
    <div class="alert alert-info text-center" role="alert">
        No drinks available at the moment.
    </div>
{{/if}}
